[[source]]
name = "pypi"
url = "https://pypi.python.org/simple"
verify_ssl = true

[requires]
python_version = "3.8"

[packages]
pandas = "*"
numpy = "*"
spacy = "*"
nltk = "*"

[dev-packages]
black = "==19.3b0"
bump2version = "*"
flake8 = "*"
isort = "*"
mypy = "*"
pre-commit = "*"
pytest = "*"
pytest-cov = "*"
sphinx = "*"
sphinx-autoapi = "*"
sphinx-rtd-theme = "*"
jupyter = "*"
jupyterlab = "*"
ipython = "*"

[scripts]
init = "pipenv run $SHELL scripts/init.sh"
commit_test = "pipenv run pre-commit run --hook-stage commit"
push_test = "pipenv run pre-commit run --hook-stage push"
coverage = "pipenv run pytest --cov --cov-fail-under=100 --cov-report term-missing:skip-covered"
tests = "pipenv run pre-commit run -a"
test = "pipenv run pytest"
make_docs = "pipenv run $SHELL scripts/make_docs.sh"
release = "pipenv run $SHELL scripts/git-release.sh"
create_ipykernel = "pipenv run python -m ipykernel install --name relevance --display-name \"Article cleaning and relevance filtering project \" "
remove_ipykernel = "pipenv run jupyter kernelspec remove relevance "
